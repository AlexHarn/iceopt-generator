# Unix submit description file

Executable              = generate_photons.sh
Log                     = logs/generate_photons.log
Output                  = logs/outfile.0$(Process)
Error                   = logs/errors.0.$(Process)
Notification            = never
Universe                = vanilla
Arguments               = $(Process)

request_cpus = 1
request_memory = 6GB
request_gpus = 1 
requirements = regexp("rad", Machine) != True && (Machine != "gtx-2")

queue 1
